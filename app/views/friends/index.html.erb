<% content_for :title, "Friends" %>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>

      <% if friend.user == current_user %>

        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td>
            <%= link_to "Show", friend %>
          </td>

          <td>
            <%= link_to "Edit", edit_friend_path(friend.id) %>
          </td>

          <td>
            <%= link_to "Delete", friend_path(friend.id), method: :delete %>
          </td>
        </tr>

      <% end %>

    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
